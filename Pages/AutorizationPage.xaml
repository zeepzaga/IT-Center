<Page x:Class="IT_Center.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IT_Center.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource TbkBody}" HorizontalAlignment="Center" FontSize="30">Авторизация</TextBlock>
            <TextBlock Margin="5 0" Style="{StaticResource TbkBody}">Логин:</TextBlock>
            <TextBox x:Name="TbLogin" Width="200"></TextBox>
            <TextBlock Margin="5 0" Style="{StaticResource TbkBody}">Пароль:</TextBlock>
            <PasswordBox Name="PbPassword" Width="200"></PasswordBox>
            <Button IsDefault="True" HorizontalAlignment="Stretch" Name="BtnLogin" Click="BtnLogin_Click" Width="auto">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
