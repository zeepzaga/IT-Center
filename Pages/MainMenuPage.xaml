<Page x:Class="IT_Center.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IT_Center.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage" Loaded="Page_Loaded">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button FontSize="24" x:Name="BtnOrderList" Click="BtnOrderList_Click" Height="150" Width="150">Заказы</Button>
                <Button FontSize="24" x:Name="BtnService" Click="BtnService_Click" Height="150" Width="150">Услуги</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button FontSize="24" x:Name="BtnDetailsPage" Click="BtnDetailsPage_Click" Height="150" Width="150">Детали</Button>
                <Button FontSize="24" x:Name="BtnWorkerList" Click="BtnWorkerList_Click" Height="150" Width="150">Работники</Button>
                <Button FontSize="24" x:Name="BtnClientList" Click="BtnClientList_Click" Height="150" Width="150">Клиенты</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
